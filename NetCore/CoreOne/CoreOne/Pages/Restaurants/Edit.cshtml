@page "{restaurantId:int?}"
@using CoreOne.Core
@model CoreOne.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Restaunrant.Name</h2>

<form method="post">

    <input type="hidden" asp-for="Restaunrant.Id" />
    <div class="form-group">
        <label asp-for="Restaunrant.Name"></label>
        <input asp-for="Restaunrant.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Restaunrant.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaunrant.Location"></label>
        <input asp-for="Restaunrant.Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Restaunrant.Cuisine"></label>
        @*<select class="form-control" asp-for="Restaunrant.Cuisine"
                    asp-items="Html.GetEnumSelectList<CuisineType>()">
            </select>*@
        <select class="form-control" asp-for="Restaunrant.Cuisine"
                asp-items="Model.Cuisines">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

</form>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial" />
}
